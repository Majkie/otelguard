# OTelGuard Environment Configuration
# Copy this file to .env and update values for your environment

# ============================================
# Server Configuration
# ============================================
OTELGUARD_PORT=8080
OTELGUARD_ENV=development

# ============================================
# PostgreSQL Configuration
# ============================================
OTELGUARD_POSTGRES_HOST=localhost
OTELGUARD_POSTGRES_PORT=5432
OTELGUARD_POSTGRES_USER=otelguard
OTELGUARD_POSTGRES_PASSWORD=otelguard
OTELGUARD_POSTGRES_DB=otelguard
OTELGUARD_POSTGRES_SSLMODE=disable
OTELGUARD_POSTGRES_MAX_OPEN_CONNS=25
OTELGUARD_POSTGRES_MAX_IDLE_CONNS=5

# ============================================
# ClickHouse Configuration
# ============================================
OTELGUARD_CLICKHOUSE_HOST=localhost
OTELGUARD_CLICKHOUSE_PORT=9000
OTELGUARD_CLICKHOUSE_DB=otelguard
OTELGUARD_CLICKHOUSE_USER=default
OTELGUARD_CLICKHOUSE_PASSWORD=

# ============================================
# Authentication
# ============================================
# IMPORTANT: Change these in production!
JWT_SECRET=your-super-secret-jwt-key-change-in-production
API_KEY_SALT=your-api-key-salt-change-in-production
OTELGUARD_JWT_EXPIRATION=24h
OTELGUARD_BCRYPT_COST=12

# ============================================
# Frontend Configuration
# ============================================
VITE_API_URL=http://localhost:8080

# ============================================
# Optional: LLM Providers (for LLM-as-Judge)
# ============================================
# OPENAI_API_KEY=sk-...
# ANTHROPIC_API_KEY=sk-...

